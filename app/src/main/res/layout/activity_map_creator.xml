<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Map Creator"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/layout_step_pinning"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#33FFFFFF"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/img_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_selection_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No images selected"
            android:textColor="#BBBBBB"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:visibility="gone">
            <fragment
                android:id="@+id/map_picker"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_map_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long press to drop a pin"
                android:background="@drawable/hint_background"
                android:textColor="@color/white"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="12dp"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_step_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalize Map Details"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/et_map_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Map Name"
            android:background="@drawable/hint_background"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="#AAA"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Environment Category:"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/hint_background"
            android:popupBackground="@color/primary"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Pick Images"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Confirm Pin"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/white"
            android:enabled="false"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>