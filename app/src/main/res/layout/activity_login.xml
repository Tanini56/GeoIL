<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/white">

    <!-- App Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="28sp"
        android:fontFamily="@font/geofont"
        android:textColor="@color/primary"
        android:layout_marginBottom="24dp"/>

    <!-- Toggle Container -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/toggle_container_border"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/loginToggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LOG IN"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/toggle_selected_rect"
            android:fontFamily="@font/geofont"/>

        <Button
            android:id="@+id/signupToggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SIGN UP"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:background="@drawable/toggle_unselected_rect"
            android:fontFamily="@font/geofont"/>
    </LinearLayout>

    <!-- Email Input -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:backgroundTint="@color/secondary"
        android:layout_marginBottom="12dp"/>

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:backgroundTint="@color/secondary"
        android:layout_marginBottom="12dp"/>

    <!-- Confirm Password (Sign Up only) -->
    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:backgroundTint="@color/secondary"
        android:visibility="gone"
        android:layout_marginBottom="24dp"/>

    <!-- Main Action Button (Filled) -->
    <Button
        android:id="@+id/actionButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Log In"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/geofont"
        android:layout_marginBottom="16dp"/>

    <!-- OR Divider (Optional but looks nice) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#999999"
        android:layout_marginBottom="16dp"/>

    <!-- Google Sign-In Button (Outlined/Secondary Style) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/googleSignInButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="CONTINUE WITH GOOGLE"
        android:textColor="@color/primary"
        android:fontFamily="@font/geofont"
        android:textSize="14sp"
        app:strokeColor="@color/primary"
        app:strokeWidth="2dp"
        app:cornerRadius="25dp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="textStart"
        app:iconTint="@color/primary" />

</LinearLayout>
